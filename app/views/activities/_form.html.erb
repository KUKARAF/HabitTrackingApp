<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="shadow p-5 my-5">
        <h2>Add a new activity</h2>
        <hr />
        <%= form_for @activity do |f| %>
		<% if f.object.errors.any? %>
  <div class="alert alert-danger">
    <p>The following errors prevent the form to be saved.</p>

    <ul>
      <% f.object.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

          <div class="form-group"> 
        
            <%= f.label :Name %>
            <%= f.text_field :myName, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :Date%>
            <%= f.date_field :myDate, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :Time%>
            <%= f.time_field :myTime, class: 'form-control' %>
          </div>

            <%= f.submit class: 'btn btn-primary' %>

            
        <% end %>
      </div>
    </div>
  </div>
</div>
